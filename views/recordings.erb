<div class="Vlt-col Vlt-col--2of3">
  <h3>Found <%=@recordings_count%> Stores</h3>
  <div class="Vlt-card Vlt-bg-white">
  	<div class="Vlt-card__content">
      <form method="GET" action="/stores">
        <div class="Vlt-grid Vlt-grid--narrow">
          <div class="Vlt-col Vlt-col--A">
            <div class="Vlt-form__element">
              <label class="Vlt-label" for="c_search">Search Column</label>
              <div class="Vlt-select">
                <select id="c_search" name="search">
                  <option selected disabled>Choose Column</option>
                  <% @recordings_names.each do |k| %>
                  <option value="<%=k%>"><%=k%></option>
                  <% end %>
                </select>
              </div>
            </div>
          </div>
          <div class="Vlt-col Vlt-col--A">
            <div class="Vlt-form__element">
              <label class="Vlt-label">Contains:</label>
              <div class="Vlt-input">
                <input type="text" name=value>
              </div>
            </div>
          </div>
          <div class="Vlt-col VLT-col--A">
            <div class="Vlt-form__element"> 
              <label class="Vlt-label"></label>
              <button class="Vlt-btn Vlt-btn--primary Vlt-btn_active" type="Submit">Search</button>
            </div>
          </div>
      </form>
      <div class="Vlt-grid__separator"><!--notes--></div>
      <div class="Vlt-table Vlt-table--data Vlt-table--cols Vlt-table--sortable" data-sortable>
          <table>
            <thead>
              <tr>
                <% @recordings_names.each do |k| %>
                    <th><b><%=k%></b></th>
                <% end %>
              </tr>    
            </thead>
            <tbody>
              <% @recordings.each do |store| %>
                <tr class="Vlt-btn-on-hover">
              <%   store.each do |k,v| %> 
              <%    if k == 'open_hours'%>
                      <td>
              <%      v.each do |day,hours| %>
                        <p><%=day%>:<%=hours[0]%>-<%=hours[1]%></p>
              <%      end %>
                      </td>
              <%    else %>
                        <td><%=v%></td>                
              <%    end %>
              <%   end %>
              	<form method="POST" action="/action"> 
              	  <input hidden name="dnis" value=<%=store['dnis']%>>
              	  <input hidden name="store" value=<%=store['store']%>>                
  	               <td class="Vlt-btn-group Vlt-btn-group--icon Vlt-btn-group--hover">
  	                 <button input hidden name=action value=edit class="Vlt-btn Vlt-btn--tertiary Vlt-btn--icon" type="submit">
  	                   <svg><use xlink:href="https://d2gl3otkt8l7qr.cloudfront.net/assets/volta-rebrand-fonts-colors/images/icons/Vlt-icon-edit.svg#Vlt-icon-edit"/>	
  	                   </svg>	        
  	                 </button>
  	                 <button input hidden name=action value=delete class="Vlt-btn Vlt-btn--tertiary Vlt-btn--icon" type="submit">
  	                   <svg><use xlink:href="https://d2gl3otkt8l7qr.cloudfront.net/assets/volta-rebrand-fonts-colors/images/icons/Vlt-icon-bin.svg#Vlt-icon-bin"/></svg>
  	                 </button> 	            
  	               </td>       
                  </form>                                           
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

